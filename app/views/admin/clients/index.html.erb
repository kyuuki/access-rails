<% content_for(:title, "クライアント一覧") %>

<% content_for :breadcrumb do %>
  <ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active">クライアント一覧</li>
  </ol>
<% end %>

<% content_for :menu_setting do %>
  <% @menu = :client %>
<% end %>

<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
      </div>
      <div class="card-body">
        <div class="mt-3">
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="width: 10px">ID</th>
              <th>IP</th>
              <th>User Agent</th>
              <th>作成日時</th>
            </tr>
          </thead>

          <tbody>
            <%= render @clients %>
          </tbody>
        </table>
        <div class="mt-3">
        </div>
      </div>
    </div>      
  </div>      

</div>
<!-- /.row -->
